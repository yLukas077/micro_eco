{
  "name": "raylabs-backend",
  "version": "1.0.0",
  "description": "Desafio Técnico – Desenvolvedor Pleno: back-end event driven e API REST.",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p .",
    "dev": "ts-node-dev --respawn src/api/index.ts",
    "api": "ts-node src/api/index.ts",
    "payment": "ts-node src/payment/index.ts",
    "inventory": "ts-node src/inventory/index.ts",
    "outbox": "ts-node src/outbox/index.ts",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js",
    "migration:run": "npm run typeorm migration:run -- -d src/utils/dataSource.ts",
    "test": "jest --runInBand --detectOpenHandles"
  },
  "dependencies": {
    "amqplib": "^0.10.3",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "pg": "^8.11.1",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.1.7",
    "ts-node": "^10.9.1",
    "typeorm": "^0.3.17",
    "uuid": "^9.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^20.4.8",
    "@types/supertest": "^2.0.12",
    "@types/swagger-jsdoc": "^6.0.4",
    "jest": "^29.6.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "testMatch": [
      "**/test/**/*.spec.ts"
    ]
  }
}
